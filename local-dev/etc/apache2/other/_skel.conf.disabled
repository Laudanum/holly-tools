NameVirtualHost *:80

<VirtualHost *:80>
    DocumentRoot "/srv/www/xxx.xxx/local"
    ServerName local.xxx.xxx
    ErrorLog "/srv/www/xxx.xxx/log/error_log"
    CustomLog "/srv/www/xxx.xxx/log/access_log" common
</VirtualHost>

<Directory /srv/www/xxx.xxx/local>
    Require all granted
</Directory>
